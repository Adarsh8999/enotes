<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="ukrainianLetter" class="enotes.letter.UkrainianLetter"/>

    <bean id="frenchLetter" class="enotes.letter.FrenchLetter"/>

    <beans profile="english">
        <import resource="english-spring-configuration.xml"/>
    </beans>

    <beans profile="spanish">
        <import resource="spanish-spring-configuration.xml"/>
    </beans>

</beans>